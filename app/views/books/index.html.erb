<h1>投稿一覧</h1>
<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<table>
   <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
       <tr><th><%= book.title %></th>
       　<th> <%= book.body %></th>
           <th><%= link_to "show", book_path(book.id) %></th>
           <th><%= link_to "edit", edit_book_path(book.id) %></th>
           <th><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？"  %></th></tr>
     <% end %>
   </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>