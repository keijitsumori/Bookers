<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <%= link_to "show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
<% end %>